# -Dlest_FEATURE_LITERAL_SUFFIX=0
# -Dlest_FEATURE_REGEX_SEARCH=0
# -Dlest_FEATURE_TIME=1

CXX        := cl
CXXFLAGS   := -nologo -W3 -EHsc -I../include
CXXFLAGS03 := $(CXXFLAGS)
CXXFLAGS11 := $(CXXFLAGS)

vpath %.hpp ../include/lest

all: test_lest.exe test_lest_basic.exe test_lest_decompose.exe test_lest_cpp03_cpp11.exe test_lest_cpp03.exe

test: all

test_lest.exe: test_lest.cpp lest.hpp
	$(CXX) $(CXXFLAGS11) test_lest.cpp
	test_lest

test_lest_basic.exe: test_lest_basic.cpp lest_basic.hpp
	$(CXX) $(CXXFLAGS11) test_lest_basic.cpp
	test_lest_basic

test_lest_decompose.exe: test_lest_decompose.cpp lest_decompose.hpp
	$(CXX) $(CXXFLAGS11) test_lest_decompose.cpp
	test_lest_decompose

test_lest_cpp03_cpp11.exe: test_lest_cpp03.cpp lest_cpp03.hpp
	$(CXX) $(CXXFLAGS11) -Fetest_lest_cpp03_cpp11.exe test_lest_cpp03.cpp
	test_lest_cpp03_cpp11

test_lest_cpp03.exe: test_lest_cpp03.cpp lest_cpp03.hpp
	$(CXX) $(CXXFLAGS03) test_lest_cpp03.cpp
	test_lest_cpp03

clean:
	-rm test_lest.exe test_lest_basic.exe test_lest_decompose.exe test_lest_cpp03_cpp11.exe test_lest_cpp03.exe
